generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Rack {
  id Int @id @default(autoincrement())
  code String @unique
  Switchs Switch[]
}

model Switch {
  id Int @id @default(autoincrement())
  code String @unique
  rackCode String @default("1")
  rack Rack @relation(fields: [rackCode], references: [code])
  Ports Port[]
}

model Port {
  id Int @id @default(autoincrement())
  code String
  switchCode String
  switch Switch @relation(fields: [switchCode], references: [code])
  desc String @default("")
  departId Int
  department Department @relation(fields: [departId], references:[id])
  patchportdesc String @default("")
}

model Department {
  id Int @id @default(autoincrement())
  departName String
  Ports Port[]
}