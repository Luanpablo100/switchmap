// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Hack {
  id Int @id @default(autoincrement())
  code String @unique
  Switchs Switch[]
}

model Switch {
  id Int @id @default(autoincrement())
  code String
  rackCode String
  rack Hack @relation(fields: [rackCode], references: [code])
  Ports Port[]
}

model Port {
  id Int @id @default(autoincrement())
  code String
  switchCode Int
  switch Switch @relation(fields: [switchCode], references: [id])
  desc String @default("")
  departId Int @default(1)
  department Department @relation(fields: [departId], references:[id])
  patchportdesc String @default("")
}

model Department {
  id Int @id @default(autoincrement())
  departName String
  Ports Port[]
}