// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Rack {
  id Int @id @default(autoincrement())
  code String @unique
  Switchs Switch[]
  PatchPanels Patchpanel[]
}

model Switch {
  id Int @id @default(autoincrement())
  code String @unique
  rackCode String
  rack Rack @relation(fields: [rackCode], references: [code])
  Ports Port[]
}

model Patchpanel {
  id Int @id @default(autoincrement())
  ppanelcode String @unique
  rackCode String
  rack Rack @relation(fields: [rackCode], references: [code])
  panelports Patchport[] 
}

model Patchport {
  id Int @id @default(autoincrement())
  pportcode String
  panelCode String
  patchpanel Patchpanel @relation(fields: [panelCode], references: [ppanelcode])
}

model Port {
  id Int @id @default(autoincrement())
  code String
  switchCode String
  switch Switch @relation(fields: [switchCode], references: [code])
  desc String @default("")
  department Department @relation(fields: [departId], references:[id])
  departId Int @default(0)
}

model Department {
  id Int @id @default(autoincrement())
  departName String
  Ports Port []
}