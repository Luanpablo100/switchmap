// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:.dev.db"
}

model Hack {
  id Int @id @default(autoincrement())
  code String @unique
  Switchs Switch[]
  departments Department[]
}

model Switch {
  id Int @id @default(autoincrement())
  code String
  rackCode String
  rack Hack @relation(fields: [rackCode], references: [code])
  Ports Port[]
  typeId Int @default(1)
  type SwitchType @relation(fields: [typeId], references: [id])
}

model Port {
  id Int @id @default(autoincrement())
  code String
  switchCode Int
  switch Switch @relation(fields: [switchCode], references: [id])
  desc String @default("")
  departId Int @default(1)
  department Department @relation(fields: [departId], references:[id])
  patchportdesc String @default("")
}

model Group {
  id Int @id @default(autoincrement())
  name String
  color String @default("#FFF")
  departments Department[]
}

model Department {
  id Int @id @default(autoincrement())
  departName String
  Ports Port[]
  groupId Int @default(1)
  group Group @relation(fields: [groupId], references: [id])
  hackId Int @default(1)
  hack Hack @relation(fields: [hackId], references: [id])
}

model SwitchType {
  id Int @id @default(autoincrement())
  name String
  switchs Switch[]
  color1 String
  color2 String
  color3 String
}